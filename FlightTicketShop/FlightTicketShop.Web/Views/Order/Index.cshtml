@model List<FlightTicketShop.Domain.DomainModels.Order>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">


    <div class="row m-4">
        <table class="table">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Details</th>
                    
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count == 0)
                {
                    <tr>
                        <td colspan="5">No Orders Yet</td>
                    </tr>
                }
                else
                {
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        var item = Model[i];

                        <tr>
                            <th scope="row">@(i + 1)</th>
                            <td>
                            @for (int j = 0; j < item.TicketInOrders.Count; j++)
                            {
                                var temp = item.TicketInOrders.ElementAt(j);
                            <p>@temp.Ticket.DepartureCity - @temp.Ticket.ArrivalCity x @temp.Quantity, </p>
                            }
                            </td>


                            
                            <td><a asp-controller="Order" asp-action="ExportOrder" asp-route-id="@item.Id" class="btn btn-primary">Export to PDF</a></td>
                        </tr>
                    }
                }
            </tbody>
            
        </table>
    </div>

</div>